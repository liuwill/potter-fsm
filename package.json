{
  "name": "potter-fsm",
  "version": "0.1.2",
  "description": "A Simple State Machine Lib Build At ShangHai",
  "main": "dist/main.js",
  "types": "./dist/main.d.ts",
  "repository": "https://github.com/liuwill/potter-fsm.git",
  "author": "liuwill<liuwill@live.com>",
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{ts,js}": [
      "npm run lint"
    ]
  },
  "devDependencies": {
    "@types/node": "^16.11.10",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/eslint-plugin-tslint": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "ava": "^3.15.0",
    "chalk": "^5.0.0",
    "eslint": "^8.3.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.2",
    "nyc": "^15.1.0",
    "prettier": "^2.5.0",
    "ts-node": "^10.4.0",
    "tslint": "^6.1.3",
    "typescript": "^4.5.2"
  },
  "scripts": {
    "prepare": "husky install",
    "coverage": "nyc ava",
    "test": "ava",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write --config ./.prettierrc './**/*.{ts,tsx}'",
    "build": "tsc --declaration src/*.ts --outDir ./dist",
    "example": "ts-node ./example/fsm.ts"
  }
}

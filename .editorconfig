# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
trim_trailing_whitespace = true

[*.{js,ts,md,json}]
insert_final_newline = true

[*.{json,js,yml,html,sql}]
indent_style = space
indent_size = 2

[.eslintrc,eslintrc,.babelrc]
indent_style = space
indent_size = 2

[*.md]
max_line_length = off
trim_trailing_whitespace = false

# Tab indentation (no size specified)
[Makefile]
indent_style = tab

# Matches the exact files either package.json or .travis.yml
[{.travis.yml}]
indent_style = space
indent_size = 2

# 2 space indentation
[*.go]
indent_style = tab
indent_size = 2
